<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    
	    <Button
	        android:id="@+id/open"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="open"
	        android:text="初始化指纹仪"/>
	    <Button
	        android:id="@+id/getFingerDetect"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="getFingerDetect"
	        android:text="开启扫描"/>
	    <Button
	        android:id="@+id/getQualityScore"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="getQualityScore"
	        android:text="获取指纹质量"/>
	    <Button
	        android:id="@+id/stopFingerDetect"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="stopFingerDetect"
	        android:text="停止扫描"
	        android:visibility="gone"/>
	    <Button
	        android:id="@+id/getFingerPicture"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="getFingerPicture"
	        android:text="获取指纹图片"/>
	    <Button
	        android:id="@+id/getFingerByte"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="getFingerByte"
	        android:text="获取指纹信息"
	        android:visibility="gone"/>
	    <Button
	        android:id="@+id/verifyFinger"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="verifyFinger"
	        android:text="verifyFinger"
	        android:visibility="gone"/>
	    <Button
	        android:id="@+id/compareFinger"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="compareFinger"
	        android:text="比较指纹"/>
	    <Button
	        android:id="@+id/close"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="close"
	        android:text="关闭指纹仪"/>
	    <Button
	        android:id="@+id/openfinger"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="openfinger"
	        android:text="openfinger"/>
	    <Button
	        android:id="@+id/fingerclose"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:onClick="fingerclose"
	        android:text="fingerclose"/>
	    
	    <TextView
	        android:id="@+id/compare_result"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="指纹比对结果："
	        android:textSize="20sp"/>
	    <TextView
	        android:id="@+id/quality_score"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="score:"
	        android:textSize="20sp"/>
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
		    <ImageView
		        android:id="@+id/reader_view"
		        android:layout_width="200dp"
		        android:layout_height="200dp"/>
		    
		    <ImageView
		        android:id="@+id/finger_picture"
		        android:layout_width="200dp"
		        android:layout_height="200dp"/>
	    </LinearLayout>
	
	</LinearLayout>

</ScrollView>
